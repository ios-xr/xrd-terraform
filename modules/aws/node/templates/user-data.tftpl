#!/bin/bash
%{~ if xrd_bootstrap }
HUGEPAGES_GB=${hugepages_gb} ISOLATED_CORES=${isolated_cores} /etc/xrd/bootstrap.sh
%{~ endif }
${additional_user_data}
%{~ if xrd_bootstrap || length(additional_user_data) > 0 }
reboot
%{~ endif }

